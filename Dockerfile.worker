# Use Node.js LTS
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build || echo "Build step optional for ts-node-dev"

# Expose health check port if needed
EXPOSE 3001

# Start the worker
CMD ["npm", "run", "dev:worker"]
