{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src",
    "scripts",
    "api",
    "packages/shared"
  ],
  "exclude": [
    ".vercel",
    "apps",
    "dist",
    "local_data",
    "node_modules",
    "src/**/__tests__",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "tests",
    "worktrees"
  ]
}
