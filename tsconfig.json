{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": [
    "src",
    "scripts",
    "api"
  ],
  "exclude": [
    ".vercel",
    "apps",
    "dist",
    "local_data",
    "node_modules",
    "src/**/__tests__",
    "tests",
    "worktrees"
  ]
}
