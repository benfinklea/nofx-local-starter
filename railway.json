{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.worker"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/",
    "healthcheckTimeout": 3,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "envVars": {
    "NODE_ENV": "production",
    "QUEUE_DRIVER": "redis",
    "WORKER_CONCURRENCY": "2",
    "STEP_TIMEOUT_MS": "30000",
    "LOG_LEVEL": "info"
  }
}