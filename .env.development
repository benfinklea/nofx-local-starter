# Development Environment Configuration
# This file contains settings for local development

# Environment
NODE_ENV=development

# Database (Supabase local)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Queue Configuration
# Option 1: PostgreSQL-based queue (recommended - uses your existing Supabase)
QUEUE_DRIVER=postgres
# REDIS_URL not needed when using postgres driver

# Option 2: Redis-based queue (for high-throughput scenarios)
# QUEUE_DRIVER=redis
# REDIS_URL=redis://default:UeboUcJX6cuDlUeLXMyyfs1Lqlf0ttwF@redis-14130.c256.us-east-1-2.ec2.redns.redis-cloud.com:14130

# Option 3: Memory-based queue (development only, not persistent)
# QUEUE_DRIVER=memory

# Worker settings (applies to all queue drivers)
WORKER_CONCURRENCY=2
STEP_TIMEOUT_MS=30000
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MS=5000

# Supabase Local
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key-from-supabase-start
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-from-supabase-start

# AI Providers (optional for development)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPGRAM_API_KEY=
ELEVENLABS_API_KEY=

# Worker Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3001

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Development Features
DEV_MODE=true
DEV_AUTO_RESTART=true
DEV_MOCK_EXTERNAL=false

# Local S3 (MinIO) - optional
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=nofx-local

# Metrics & Monitoring (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090