{
  "buildCommand": "npm install --production=false && cd apps/frontend && npm install && cd ../.. && npm run fe:build",
  "outputDirectory": "apps/frontend/dist",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/reset-password",
      "dest": "/reset-password.html"
    },
    {
      "src": "/login",
      "dest": "/login.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
