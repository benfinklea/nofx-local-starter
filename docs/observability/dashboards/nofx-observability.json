{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP p95 by route",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_ms_bucket[5m])) by (le, route))",
          "legendFormat": "{{route}}",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Step p95 by tool",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(step_duration_ms_bucket[5m])) by (le, tool))",
          "legendFormat": "{{tool}}",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error rate (failed/total)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "fieldConfig": { "defaults": { "unit": "percentunit" }, "overrides": [] },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(steps_total{status=\"failed\"}[5m]) / (rate(steps_total[5m]) + 1e-9)",
          "legendFormat": "error rate",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "alert": {
        "alertRuleTags": {},
        "conditions": [
          {
            "evaluator": { "type": "gt", "params": [0.05] },
            "operator": { "type": "and" },
            "query": { "params": ["A", "5m", "now"] },
            "reducer": { "type": "last" },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "for": "5m",
        "frequency": "1m",
        "handler": 1,
        "name": "NOFX Error Rate > 5%",
        "noDataState": "no_data",
        "notifications": []
      }
    },
    {
      "type": "timeseries",
      "title": "Queue depth by state (step.ready)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (state) (queue_depth{topic=\"step.ready\"})",
          "legendFormat": "{{state}}",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ],
      "alert": {
        "alertRuleTags": {},
        "conditions": [
          {
            "evaluator": { "type": "gt", "params": [50] },
            "operator": { "type": "and" },
            "query": { "params": ["A", "10m", "now"] },
            "reducer": { "type": "max" },
            "type": "query"
          }
        ],
        "executionErrorState": "alerting",
        "for": "10m",
        "frequency": "1m",
        "handler": 1,
        "name": "NOFX Queue Depth > 50 (waiting)",
        "noDataState": "no_data",
        "notifications": []
      }
    },
    {
      "type": "timeseries",
      "title": "Oldest waiting job age (ms)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] },
      "targets": [
        {
          "refId": "A",
          "expr": "queue_oldest_age_ms{topic=\"step.ready\"}",
          "legendFormat": "step.ready",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "DB p95 query duration",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "fieldConfig": { "defaults": { "unit": "ms" }, "overrides": [] },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(db_query_duration_ms_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Retries by provider (5m)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(retries_total[5m])) by (provider)",
          "legendFormat": "{{provider}}",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["nofx","observability"],
  "templating": {
    "list": [
      { "type": "datasource", "name": "DS_PROMETHEUS", "query": "prometheus", "hide": 0 },
      { "type": "interval", "name": "interval", "query": "1m,5m,10m,1h", "auto": true, "auto_min": "10s" }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timezone": "",
  "title": "NOFX Observability",
  "uid": "nofx-observability",
  "version": 1,
  "weekStart": ""
}

